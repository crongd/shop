<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mappers.OrderMapper" >

    <insert id="create_order">
        insert into `order` values(null, #{id}, now())
    </insert>

    <insert id="create_order_cart" >
        <selectKey keyProperty="no" order="BEFORE" resultType="int" >
            select last_insert_id()
        </selectKey>
        insert into `order_cart`(order_no, cart_no) values
        <foreach collection="shoppingCarts" item="shoppingCart" separator="," >
            (#{no}, #{shoppingCart.no})
        </foreach>
    </insert>

    <select id="get_order" resultMap="" >

    </select>


</mapper>